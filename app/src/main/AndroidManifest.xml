<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="kz.movieapp.moviedb">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
			android:name=".App"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@mipmap/ic_launcher_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			android:usesCleartextTraffic="true"
			tools:ignore="GoogleAppIndexingWarning">
		<activity android:name=".movie.moviefilter.activity.MovieFilterActivity"
		          android:launchMode="singleTop"
		          android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
				android:name=".movie.genre.activity.GenreActivity"
				android:launchMode="singleTop"
				android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity android:name=".auth.RegisterActivity">
		</activity>
		<activity android:name=".auth.LoginActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".detail.DetailActivity"
				android:label="О Фильме"
				android:parentActivityName=".NavActivity"
				tools:targetApi="jelly_bean">
		</activity>
		<activity
				android:name=".NavActivity"
				android:launchMode="singleTop"
				android:theme="@style/AppTheme.NoActionBar">
			<meta-data
					android:name="android.app.searchable"
					android:resource="@xml/searchable"/>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
		</activity>
	</application>

</manifest>